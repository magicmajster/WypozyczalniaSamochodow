@model CarReservationCore.Models.Reservation
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Usuń rezerwację</h2>

<div class="alert alert-warning">
    <i class="fa-solid fa-triangle-exclamation"></i>
    <strong>Uwaga!</strong> Ta operacja jest nieodwracalna.
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">Samochód</dt>
        <dd class="col-sm-10">@Model.Car?.Brand @Model.Car?.Model (@Model.Car?.Year)</dd>

        <dt class="col-sm-2">Klient</dt>
        <dd class="col-sm-10">@Model.Customer?.FirstName @Model.Customer?.LastName</dd>

        <dt class="col-sm-2">Data rozpoczęcia</dt>
        <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Data zakończenia</dt>
        <dd class="col-sm-10">@Model.EndDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ReservationId" />
    <button type="submit" class="btn btn-danger">
        <i class="fa-solid fa-trash"></i> Usuń
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fa-solid fa-arrow-left"></i> Anuluj
    </a>
</form>
