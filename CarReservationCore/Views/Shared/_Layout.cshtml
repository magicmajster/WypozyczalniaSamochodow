<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - CarReservationCore</title>

    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

   
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

   
    <link rel="stylesheet" href="~/css/site.css" />

    @RenderSection("Styles", required: false)
</head>
<body>
    >
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="fa-solid fa-car"></i> CarReservationCore
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                   
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Cars" asp-action="Index">
                            <i class="fa-solid fa-list"></i> Samochody
                        </a>
                    </li>
                   
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Reservations" asp-action="Index">
                            <i class="fa-solid fa-calendar-check"></i> Rezerwacje
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="btn btn-link nav-link" style="display:inline;padding:0">
                                    <i class="fa-solid fa-right-from-bracket"></i> Wyloguj
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">
                                <i class="fa-solid fa-right-to-bracket"></i> Zaloguj
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">
                                <i class="fa-solid fa-user-plus"></i> Rejestracja
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

   
    <header class="bg-image d-flex align-items-center" style="min-height: 250px;">
        <div class="container text-center text-white">
            <h1 class="display-4 fw-bold">Witamy w CarReservationCore</h1>
            <p class="lead">Najlepszy sposób na rezerwację samochodów online!</p>
        </div>
    </header>

   
    <div class="container my-4" style="min-height: 60vh;">
        @RenderBody()
    </div>

    <footer class="bg-dark text-white py-3 mt-auto">
        <div class="container text-center">
            <small>&copy; 2025 - Wypożyczalnia Aut. Wszelkie prawa zastrzeżone.</small>
        </div>
    </footer>

  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
